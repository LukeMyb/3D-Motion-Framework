{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build game",
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceFolder}/src/*.cpp",
                "-o", "game.exe",
                "-std=c++20",
                "-I./include",
                "-L./lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}